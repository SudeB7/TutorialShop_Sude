@model List<TutorialShop.Models.Course>

<h2>My Courses</h2>

@if (Model.Count == 0)
{
    <p>You haven't bought any courses yet.</p>
}
else
{
    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var course in Model)
        {
            <div class="col">
                <div class="card h-100">
                    <img src="@course.ImageUrl" class="card-img-top" alt="Course Image" />
                    <div class="card-body">
                        <h5 class="card-title">@course.Name</h5>
                        <p class="card-text">@course.Description</p>
                        <a href="@Url.Action("Details", "Home", new { id = course.Id })" class="btn btn-primary">View Course</a>
                    </div>
                </div>
            </div>
        }
    </div>
}
